<div class="amazing-deals">
  <div class="container">
    <div class="row">
      <div class="col-lg-6 offset-lg-3">
        <div class="section-heading text-center">
          <h2>{{title}}</h2>
          <p>Deskripsi Toko mu disini</p>
        </div>
      </div>
      {{#each shops}}
      <!-- Item 1 -->
      <div class="col-lg-6 col-sm-6">
        <div class="item">
          <div class="row">
            <div class="col-lg-6">
              <div class="image">
                <img src="assets/images/{{this.dataValues.image}}" alt="">
              </div>
            </div>
            <div class="col-lg-6 align-self-center">
              <div class="content">
                <h4>{{this.dataValues.name}}</h4>
                <div class="row">
                  <div class="col-6">
                    <i class="bi bi-cash">Rp. {{this.dataValues.price}}</i>
                  </div>
                  <div class="col-6">
                  </div>
                </div>
                <p>{{this.dataValues.description}}</p>
                <div class="main-button">
                  <a href="{{this.dataValues.link1}}">Order Sekarang</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
